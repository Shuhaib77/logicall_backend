generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?
  email     String     @unique
  password  String
  favMovies FavShows[]
}

model FavShows {
  id        Int            @id @default(autoincrement())
  title     String         @unique
  type_id   Int
  director  String
  budget    Int
  location  String
  duration  String
  user_id   Int
  year      Int
  time      DateTime
  user      User           @relation(fields: [user_id], references: [id])
  catogery  MoviesCatogery @relation(fields: [type_id], references: [id])
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model MoviesCatogery {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  shows       FavShows[]
}
